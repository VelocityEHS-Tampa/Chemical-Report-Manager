                @Html.TextBoxFor(m => m.Report_By, new { @class = "form-control GLOFieldSpacing", id = "TBreportedby", @Name = "TBreportedby", style = "width: 25%;", tabindex = 3 })
                <br />
                <span>Report Date / Time</span>
