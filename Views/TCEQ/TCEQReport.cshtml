@model ChemicalLibrary.TCEQ
@{
    ViewData["Title"] = "TCEQ Report";
    List<string> Counties = ViewBag.Counties;
    string NewID = ViewBag.NewID;
    string Revised = ViewBag.Revised;

    List<SelectListItem> UnitTypes = new List<SelectListItem>();
